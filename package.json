{
  "name": "authentication-app-backend",
  "version": "1.0.0",
  "description": "Authentication backend",
  "main": "src/server.js",
  "scripts": {
    "dev": "nodemon ./dist/server.js",
    "typeorm": "typeorm-ts-node-commonjs",
    "compile:w": "npx tsc -w",
    "start": "node ./dist/server.js",
    "build": "npx tsc",
    "format": "prettier --write src/**/*.{ts,js,json}",
    "lint": "eslint --ext src/**/*.{ts,js} --color",
    "isready": "npm run format && npm run lint && npm run start",
    "sync:migrations": "typeorm migration:generate ./src/typeorm/migration/schema -d ./dist/typeorm/dataSource.js",
    "run:migrations": "typeorm migration:run -d ./dist/typeorm/dataSource.js",
    "create:migration": "typeorm migration:create ./src/typeorm/migration/add-admin",
    "revert:migrations": "typeorm migration:revert",
    "db-reset": "typeorm schema:drop -d ./dist/typeorm/dataSource.js",
    "test": "mocha ./dist/test/*.js"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "^8.0.29",
    "@types/nodemailer": "^6.4.7",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "eslint": "^7.32.0",
    "ts-node": "3.3.0",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "D": "^1.0.0",
    "bcrypt": "^5.1.0",
    "chai": "^4.3.7",
    "chai-http": "^4.3.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.0",
    "jest": "^29.5.0",
    "joi": "^17.9.1",
    "jsonwebtoken": "^9.0.0",
    "mocha": "^10.2.0",
    "nodemailer": "^6.9.1",
    "pg": "^8.4.0",
    "reflect-metadata": "^0.1.10",
    "supertest": "^6.3.3",
    "swagger-ui-express": "^4.6.2",
    "typeorm": "0.3.6"
  }
}
